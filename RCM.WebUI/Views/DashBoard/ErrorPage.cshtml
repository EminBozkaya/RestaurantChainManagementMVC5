@using RCM.Model.Complex.Custom

@{
    Layout = null;
}

@model ErrorFormatVm

<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/Content/plugins/AdminLte/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/Content/plugins/AdminLte/css/adminlte.min.css">

</head>



<body class="content-wrapper" style="width:1345px; height:620px">

    <div class="content-wrapper" style="width:100%; height:100%;margin-left:0px; margin-top:100px">
        <section class="content">
            <div class="error-page" style="margin-top:0">
                <h2 class="headline text-danger"><i class="fas fa-exclamation-triangle text-danger"></i></h2>
                <div class="error-content">
                    <h3>Üzgünüm! @Model.ErrorTitle</h3>
                    <div id="msgBody" message="@Model.ErrorMessages">
                        
                    </div>
                </div>
            </div>
        </section>
    </div>
    <script src="~/Content/plugins/AdminLte/js/jquery.min.js"></script>
    <script src="~/MyScripts/Helper/ErrorPage.js"></script>
</body>
</html>
